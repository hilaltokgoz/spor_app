<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/active_gray"
    tools:context=".navigationdrawer.AlarmFragment">

    <TextView
        android:id="@+id/timeAgainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Tekrarla"
        android:textSize="24sp"
        android:layout_marginStart="25dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timeAgainText">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mondayButton"
            android:layout_width="wrap_content"
            app:cornerRadius="100dp"
            android:backgroundTint="@color/active_green"
            android:text="M"
            android:padding="5dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tuesdayButton"
            android:layout_width="wrap_content"
            app:cornerRadius="100dp"
            android:backgroundTint="@color/gray"
            android:text="T"
            android:layout_weight="1"
            android:padding="5dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/wednesdayButton"
            android:layout_width="wrap_content"
            app:cornerRadius="100dp"
            android:backgroundTint="@color/active_green"
            android:text="W"
            android:layout_weight="1"
            android:padding="5dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/thursdayButton"
            android:layout_width="wrap_content"
            app:cornerRadius="100dp"
            android:backgroundTint="@color/gray"
            android:text="T"
            android:layout_weight="1"
            android:padding="5dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fridayButton"
            android:layout_width="wrap_content"
            app:cornerRadius="100dp"
            android:backgroundTint="@color/gray"
            android:text="F"
            android:padding="5dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/saturdayButton"
            android:layout_width="wrap_content"
            app:cornerRadius="100dp"
            android:backgroundTint="@color/active_green"
            android:text="S"
            android:padding="5dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/sundayButton"
            android:layout_width="wrap_content"
            app:cornerRadius="100dp"
            android:backgroundTint="@color/gray"
            android:text="S"
            android:padding="5dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="Alarm"
        android:layout_marginTop="150dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeAgainText" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/timeAgainText">

        <RadioButton
            android:id="@+id/doExerciseRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Egzersiz Yap"
            tools:layout_editor_absoluteX="117dp"
            tools:layout_editor_absoluteY="324dp" />

        <RadioButton
            android:id="@+id/drinkWaterRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Su İç"
            tools:layout_editor_absoluteX="117dp"
            tools:layout_editor_absoluteY="389dp" />
    </RadioGroup>

    <androidx.cardview.widget.CardView
        android:id="@+id/alarmCV"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:backgroundTint="@color/gray2"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup">

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/vibrationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_marginTop="100dp"
        android:text="Titreşim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alarmCV" />

    <Switch
        android:id="@+id/openSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vibrationTextView"
        app:layout_constraintTop_toBottomOf="@+id/alarmCV" />


</androidx.constraintlayout.widget.ConstraintLayout>